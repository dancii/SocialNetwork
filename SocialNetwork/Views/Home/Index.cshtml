@model SocialNetwork.ViewModels.UserInfoViewModel

@{
    if (!User.Identity.IsAuthenticated)
    {
        Response.Redirect("Account/Login");
    }
    ViewBag.Title = "Profile";
    
}

<div class="jumbotron">
    <h1>This is your profile</h1>
    <p class="lead">Here you can see how many times you logged in, when you last logged in and see any unread messages</p>
    <!-- <p><a href="#" class="btn btn-primary btn-large">Learn more &raquo;</a></p> -->
</div>

@if(Model.LoginCount>=1){

    <div class="row">
        <div class="col-md-4">
            <h2>Last Login</h2>
            <p>
                <h4>@Html.DisplayFor(model => model.LastLogin)</h4>
            </p>
        </div>
        <div class="col-md-4">
            <h2>Login Count</h2>
            <h3>@Html.DisplayFor(model => model.LoginCount)</h3>
        </div>
        <div class="col-md-4">
            <h2>Unread Messages</h2>
            <h3>@Html.DisplayFor(model => model.MessageUnreadCount)</h3>
        </div>
    </div>

}
else
{
    <p>This is you first time you have logged in!</p>

}