@model IEnumerable<SocialNetwork.ViewModels.MainMessageViewModel>

@{
    ViewBag.Title = "Messages"; 
}

<h2>Messages</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.noOfMessages)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model){ 
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.noOfMessages)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { senderUsername=item.Username })
            
        </td>
    </tr>
}

</table>
<h2>Total Messages: </h2> 
