@model IEnumerable<SocialNetwork.ViewModels.DetailMessageViewModel>

@{
    ViewBag.Title = "Messages";
}

<h2>All messages from @Html.DisplayFor(model => model.First().SenderUsername)</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MessageSubject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MessageTimestamp)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MessageSubject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MessageTimestamp)
            </td>
            <td>
                @Html.ActionLink("Read Message", "ReadMessage", new { id = item.MessageId })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
